@inject IDialogService DialogService
@inherits MudDialogBase
@code {
    [Parameter] public string ContentText { get; set; } = "¿Seguro que deseas cerrar sesión?";
    [Parameter] public string ButtonText { get; set; } = "Cerrar sesión";
    [Parameter] public Color Color { get; set; } = Color.Error;
}

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton OnClick="Close" Color="@Color">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>
